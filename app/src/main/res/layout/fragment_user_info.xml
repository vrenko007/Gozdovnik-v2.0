<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="200dp"
    tools:context="vrenko.semrov.gorisek.gozdovnik.Fragments.UserInfoFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userBackground"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:contentDescription="User Background"
        android:src="@drawable/user_background"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="85dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#258f8f8f">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/userImage"
            android:src="@drawable/placeholder_user"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Matic Vrenko"
            android:id="@+id/userName"
            android:layout_alignBottom="@+id/userImage"
            android:layout_toEndOf="@+id/userImage"
            android:layout_marginStart="16dp"
            android:textColor="#ffffffff"
            android:layout_marginEnd="16dp" />
    </RelativeLayout>

</RelativeLayout>
